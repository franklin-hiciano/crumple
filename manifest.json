{
  "manifest_version": 3,
  "name": "Fisheye — Shader Mode",
  "version": "0.3.1",
  "description": "Screen‑space fisheye shader overlay with lens handles. No DOM scaling.",
  "icons": { "128": "icon128.ico" },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": false,
      "js": ["html2canvas.min.js", "shader_warp.js"]
    }
  ]
}
